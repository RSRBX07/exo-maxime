<div class="container">
<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Players</strong>
  <%= @game.players %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>Draw:</strong>
  <%= if @game.draw.size == 0 
        @game.draw=@game.draw_t
        @game.save
        @game.draw
      else 
        @game.draw
      end 
  %>
</p>

<%= link_to 'Back', games_path %>
</div>
